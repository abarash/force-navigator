{
	"name": "Salesforce Navigator for Lightning",
	"version": "2.0.6",
	"manifest_version": 2,
	"default_locale": "en",
	"browser_action": { "default_icon": "images/sf-navigator32.png" },
	"background": {
		"scripts": [ "scripts/background.js" ],
		"persistent": true
	},
	"icons": {
		"16": "images/sf-navigator16.png",
		"32": "images/sf-navigator32.png",
		"48": "images/sf-navigator48.png",
		"128": "images/sf-navigator128.png"
	},
	"web_accessible_resources": [
		"images/ajax-loader.gif",
		"images/sf-navigator128.png"
	],
	"description": "Get more done in Salesforce - list and search records, make new ones, create a task or login as on the fly!",
	"content_scripts": [{
		"css": [ "styles/main.css" ],
		"matches": [
			"https://*.force.com/*",
			"https://*.salesforce.com/*",
			"https://*.cloudforce.com/*"
		],
		"all_frames": true,
		"js": [
			"scripts/jquery.js",
			"scripts/mousetrap.min.js",
			"scripts/forceTooling.js",
			"scripts/pluralize.js",
			"scripts/main.js",
			"scripts/popup.js"
		],
		"run_at": "document_end"
	}],
	"commands": {
		"goToTasks": {
			"description": "Go directly to Tasks",
			"suggested_key": {
				"default": "Ctrl+Alt+1"
			}
		},
		"goToReports": {
			"description": "Go directly to Reports",
			"suggested_key": {
				"default": "Ctrl+Alt+2"
			}
		},
		"showSearchBox": {
			"description": "Open Search Box",
			"suggested_key": {
				"default": "Ctrl+Shift+Space"
			}
		},
		"showAppMenu": {
			"description": "Open Lightning App Menu",
			"suggested_key": {
				"default": "Ctrl+Shift+A"
			}
		}
	},
	"permissions": [
		"activeTab",
		"https://*.force.com/*",
		"https://*.salesforce.com/*",
		"https://*.cloudforce.com/*",
		"storage",
		"cookies"
	]
}